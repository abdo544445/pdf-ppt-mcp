{
  "name": "pdf-ppt-mcp-explorer",
  "displayName": "PDF/PPT MCP Explorer",
  "description": "Visual explorer and AI config wrapper for pdf-ppt-mcp",
  "icon": "images/icon.png",
  "version": "0.0.5",
  "publisher": "Abdoalatrash",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "pdf",
    "ai",
    "claude",
    "cline",
    "roo"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abdo544445/pdf-ppt-mcp.git"
  },
  "activationEvents": [
    "onView:mcp-docs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pdf-ppt-mcp-explorer",
          "title": "PDF/PPT MCP",
          "icon": "$(search-view-icon)"
        }
      ]
    },
    "views": {
      "pdf-ppt-mcp-explorer": [
        {
          "id": "mcp-docs",
          "name": "Supported Documents",
          "icon": "$(file-code)"
        }
      ]
    },
    "commands": [
      {
        "command": "pdf-ppt-mcp-explorer.previewDocument",
        "title": "Preview Document Text",
        "icon": "$(open-preview)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.askAI",
        "title": "Ask AI about Document",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.copyPathForAI",
        "title": "Copy Prompt for AI",
        "icon": "$(clippy)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.openExternally",
        "title": "Open Native File (Word/PDF)",
        "icon": "$(link-external)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.revealInOS",
        "title": "Reveal in OS Explorer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.deleteFile",
        "title": "Delete Document",
        "icon": "$(trash)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.addExternalFile",
        "title": "Add External File to Workspace",
        "icon": "$(add)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.ocrDocument",
        "title": "Force OCR (Slow)",
        "icon": "$(eye)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.installMcpServer",
        "title": "Auto-Configure AI Assistant",
        "icon": "$(gear)"
      },
      {
        "command": "pdf-ppt-mcp-explorer.refreshList",
        "title": "Refresh Documents",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pdf-ppt-mcp-explorer.addExternalFile",
          "when": "view == mcp-docs",
          "group": "navigation@1"
        },
        {
          "command": "pdf-ppt-mcp-explorer.installMcpServer",
          "when": "view == mcp-docs",
          "group": "navigation@2"
        },
        {
          "command": "pdf-ppt-mcp-explorer.refreshList",
          "when": "view == mcp-docs",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "pdf-ppt-mcp-explorer.askAI",
          "group": "1_main@1"
        },
        {
          "command": "pdf-ppt-mcp-explorer.copyPathForAI",
          "group": "1_main@2"
        },
        {
          "command": "pdf-ppt-mcp-explorer.previewDocument",
          "group": "1_main@3"
        },
        {
          "command": "pdf-ppt-mcp-explorer.openExternally",
          "group": "2_os@1"
        },
        {
          "command": "pdf-ppt-mcp-explorer.revealInOS",
          "group": "2_os@2"
        },
        {
          "command": "pdf-ppt-mcp-explorer.deleteFile",
          "group": "3_mod@1"
        }
      ],
      "explorer/context": [
        {
          "command": "pdf-ppt-mcp-explorer.askAI",
          "when": "resourceExtname == .pdf || resourceExtname == .docx || resourceExtname == .xlsx || resourceExtname == .ppt || resourceExtname == .csv",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "PDF/PPT MCP Explorer Settings",
      "properties": {
        "pdfPptMcpExplorer.defaultPrompt": {
          "type": "string",
          "default": "Please thoroughly analyze this document and provide a summary:",
          "description": "The default phrase copied to your clipboard when using the 'Copy Prompt for AI' action."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "pdf-ppt-mcp": "^1.1.0"
  }
}
